<%= form_for ([@idea, @idea.comments.build]) do |f| %>

<div class="form-group">
  <%= f.label :name , :style =>"color:white;"%>
  <%= f.text_field :name, class: 'form-control', :style =>"width:60%;" %>
</div>


<div class="form-group">
  <%= f.label :comment, :style =>"color:white;" %>
  <%= f.text_area :body, class: 'form-control' , :style =>"width:60%;"%>
</div>

<%= f.submit class: 'btn btn-primary' %>

<% end %>
